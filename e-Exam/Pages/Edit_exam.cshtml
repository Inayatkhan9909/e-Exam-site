@page
@model e_Exam.Pages.Edit_examModel
@{
}









]
    <style>

    .form_cover_Add_Exam{
        background-color: rgb(196, 18, 18);
        max-width: 50vw;
        margin:auto;
        height:80vh;
      padding:3vh 0vw;
    }
        form {
          
            
           margin:5vh auto;
             max-width: 80%;
            padding: 20px;
            background-color: #f5f5f5;
            border: 1px solid #ddd;
            border-radius: 5px;
            font-family: Arial, sans-serif;
        }

        label {
            display: block;
            margin-bottom: 8px;
        }

        input, textarea {
            width: 100%;
            padding: 10px;
            margin-bottom: 15px;
            box-sizing: border-box;
            border: 1px solid #ccc;
            border-radius: 4px;
        }

    .div_btn_submit{
        display:flex;
        align-items:center;
        justify-content:center;
        width:100%;

    }

        button {
            background-color: rgb(196, 18, 18);
            color: #fff;
            padding: 10px 15px;
            border: none;
            border-radius: 4px;
            cursor: pointer;
             
        }

            button:hover {
                background-color: #c20c0c;
            }
    </style>

   <div class="form_cover_Add_Exam">

  

    <form method="post">
        <h2>Edit Exam</h2>

        <label for="Exam_id">Exam ID:   @Model.examinfo.Exam_id</label>
        <input type="text" id="Exam_id" value="@Model.examinfo.Exam_id" name="Exam_id" hidden>
        <label for="Exam_name">Exam Name:</label>
        <input type="text" id="Exam_name" value="@Model.examinfo.Exam_name"  name="Exam_name" required>

        <label for="Exam_date">Exam Date:</label>
        <input type="date" id="Exam_date" value="@Model.examinfo.Exam_date"  name="Exam_date" required>

        <label for="Exam_description">Exam Description:</label>
        <textarea name="Exam_description" rows="4">@Html.Raw(Model.examinfo.Exam_description)</textarea>

       @*  <textarea name="Exam_description" value="@Model.examinfo.Exam_description" rows="4"></textarea> *@

       <div class="div_btn_submit">
            <button type="submit">Update</button>
       </div>
    </form>


</div>




